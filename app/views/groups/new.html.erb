<div class="container">
   

   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>Create Group</h2>
       
        
        
        <%= form_with model: @group,  local:true do |f| %>
         　<div class="form-group">
               <label for="user_name">グループ名</label>
                  <%= f.text_field :name,class:" form-control name" %>
           </div>


            <div class="form-group">
              <label for="user">Introduction</label>
              <%= f.text_area :introduction,class:" form-control introduction" %>
             </div>
            <div class="form-group">
              
          　　 <div class="user-image">
               <label for="user">Image</label>
               <%= f.attachment_field :image %>
            　</div>
              
             <%= f.submit 'Create group',class:"btn btn-secondary" %>
       <% end %>
      </div> 
     </div>  
    </div>  