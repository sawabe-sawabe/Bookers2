<div class="container">
   

   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>Event Mail</h2>
       
        
        
        <%= form_with url: group_send_mail_path(@group), method: :get, local:true do |f| %>
         　<div class="form-group">
               <label for="group_name">Title</label>
                  <%= f.text_field :title,class:" form-control title" %>
           </div>


            <div class="form-group">
              <label for="group">Content</label>
              <%= f.text_area :content,class:" form-control content" %>
             </div>
           
          　
              
            <%= f.submit '送信',class:"btn btn-info" %>
       <% end %>
     
      </div> 
     </div>  
    </div>  