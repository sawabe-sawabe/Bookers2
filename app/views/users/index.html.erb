
<div class="container px-5 px-sm-0"> 



<div class="row">
 
  <%= render'books/book',book:@book ,users:@users%>
 
<div class="col-md-8 offset-md-1">
 <h2>Users</h2>
<table class="table"> 
 <thead>
  <tr>
   <th></th>
   <th>image</th>
   <th>name</th>
   <th colspan="3"></th>
  </tr> 
  </thead>
  <tbody>
  <%  @user.each do |user| %> 
   <tr>
     <td>
      <%= attachment_image_tag user,:profile_image, format: 'image', size: "40x40" , format: 'jpeg', fallback: "no_image.jpg" %>
    
     </td>
     <td><%=user.name%></td>
     <td>フォロー数:<%=user.followings.count %></td>
     <td>フォロワー数:<%=user.followers.count %></td>
     <% unless user == current_user %>
      <% if current_user.following?(user) %>
     
      <td><%= link_to "フォローを外す",relationship_path(@users),method: :delete%></td>
     
     <% else %>
     
       <%= hidden_field_tag :follow_id, user.id %>
      <td><%= link_to "フォローをする",relationships_path,method: :post %></td>
      
      <% end %> 
    <% end %>
     <td><%=link_to "Show",user_path(user.id)%></td>
    </tr> 
  <%end%>
   </tbody>
   </table>
  </div>
  </div>
</div>