
<div class="container px-5 px-sm-0"> 



<div class="row">
 
  <%= render'books/book',book:@book ,users:@users%>
 
 
 <div class="col-md-8 offset-md-1">
 <h2>Users</h2>
<table class="table"> 
 <thead>
  <tr>
   <th></th>
   <th>image</th>
   <th>name</th>
   <th colspan="3"></th>
  </tr> 
  </thead>
  <tbody>
  <%  @usersindex.each do |userindex| %> 
   <tr>
     <td>
      <%= attachment_image_tag userindex,:profile_image, format: 'image', size: "40x40" , format: 'jpeg', fallback: "no_image.jpg" %>
    
     </td>
     <td><%=userindex.name%></td>
     <td><%=link_to "show",user_path(userindex.id)%></td>
    </tr> 
   <% end %> 
   </tbody>
   </table>
  </div>
  </div>
  </div>