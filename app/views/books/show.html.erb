
<div class="container px-5 px-sm-0"> 
<div class="row">
 
 
 <%= render'books/book',book:@book ,users:@users, relationship:@relationship%>
 
 
 <div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
<table class="table table-hover table-inverse"> 
 
  <tbody>
    
   <tr>
     <td><%=link_to user_path(@books.user.id) do %>
      <%= attachment_image_tag @users, :profile_image, format: 'image', size: "40x40", fallback: "no_image.jpg" %><br>
     <%= @books.user.name %>
     <% end %>
     </td>
     <td><%=link_to books_path do %><%=@books.title%><% end %></td>
     <td><%=@books.body %></td>
    
     　
     <td>
       <%= render 'favorites/favorite-btn',  book:@books %>
      　
    </td>
   
    <td>
      コメント数：<%= @books.book_comments.count %>
    </td>    
  
     <% if @books.user == current_user %>
     <td><%=link_to "Edit",edit_book_path(@books.id),class:"btn btn-sm btn-success "%></td>
     <td><%=link_to "Destroy",book_path(@books.id),method: :delete,"data-confirm"=>"本当に削除しますか？",class:"btn btn-sm btn-danger "%></td>
   
    <% end %>
    </tr> 
   
   </tbody>
   </table>
    <table>
　　　<tbody id="comments_area">
　　　  <%= render partial: 'comments/index', locals: { books: @books } %>
　　　</tbody>
　　</table> 
　   <div id="new-comment">
       <%= render partial: 'comments/form', locals: { books: @books, book_comment: @book_comment } %>
     </div> 　
  　
  
  </div>
  </div>

 