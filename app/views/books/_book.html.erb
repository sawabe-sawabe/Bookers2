<div class="col-md-3">
     <h2>User info</h2>
      
 <%= attachment_image_tag users, :profile_image,  format: 'image', size: "100x100" , fallback: "no_image.jpg" %>

        <table class="table">
          <tbody>
            <tr></tr>
             <tr>
             <th>name</th>
              <th><%= users.name%></th>
             
             </tr> 
            
            <tr>
              <th>introduction</th>
              <th><%= users.introduction%></th>
              
            </tr>
            <tr>
              <th>follows</th>
              <th><%= link_to " #{users.followers.count}", followings_user_path(users.id) %></th>
            </tr>  
             <tr>
              <th>followers</th>
              <th><%= link_to " #{users.followings.count}", followers_user_path(users.id) %></th>
             </tr>  
     
      <% unless users == current_user %>
        <%if current_user.following?(users)%>
         <%=form_with model: @relationship, url: relationship_path, method: :delete, local: true do |f|%>
       <tr>
         <th> <%=f.submit "フォローを外す",class:"btn btn-sm btn-info"%></th>
         <% end %>
        <% else %>
         <%=form_with model: @relationship, url: relationships_path, local: true do |f|%>
           <%= hidden_field_tag :follow_id, users.id %>
          <th><%=f.submit "フォローをする",class:"btn btn-sm btn-success"%></th>
         <% end %> 
        <% end %> 
      <% end %>
      </tr>
      </table> 
  <div class="row">
      <%=link_to "",edit_user_path(users.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog"%> 
    
  </div>

  
  <h2 class="mt-3">New book</h2>

 <%= form_with model: book,  local:true do |f| %>

 
 
 <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title,class:" form-control book_title" %>
  </div>

  <div class="form-group">
     <label for="book_opiniony">Opinion</label>
     <%= f.text_area :body,class:"form-control book_body" %>
  </div>

  <div class="form-group">
   <%= f.submit 'Create Book',class:"btn btn-success" %>
  </div>
<% end %>
 </div>
 